<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/segundo_fundo"
    tools:context="Fragment.NumerosFragment">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <ImageView
        android:id="@+id/imageUm"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/um"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageDoiss"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/doiss"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageTres"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/tres"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/imageUm" />

    <ImageView
        android:id="@+id/imageQuatro"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/quatro"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toBottomOf="@+id/imageDoiss" />

    <ImageView
        android:id="@+id/imageCinco"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/cinco"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/imageTres" />

    <ImageView
        android:id="@+id/imageSeis"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/seis"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toBottomOf="@+id/imageQuatro" />
</androidx.constraintlayout.widget.ConstraintLayout>